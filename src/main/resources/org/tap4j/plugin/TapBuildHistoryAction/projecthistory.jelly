<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
    <h1><st:out value="${it.title}" /></h1>
    <j:forEach var="set" items="${it.testSets}">
        <j:set var="builds" value="${it.builds}"/>
        <h2>
            <st:out value="${set.fileName}"/>
        </h2>
        <table class="pane sortable" id="testhistory">
          <tr>
            <td class="pane-header">Test</td>  
            <j:forEach var="build" items="${builds}">
              <td class="pane-header" style="width:5em"><st:out value="${build.id}"/></td>
            </j:forEach>
          </tr>
          <j:forEach var="test" items="${set.testSet.testResults}">
              <tr>
                    <td>${test.testNumber} - ${test.description}</td>
                    <j:forEach var="build" items="${builds}">
                        <j:set var="state" value="${it.getBuildStatus(set, test, build)}"/>
                        <j:set var="color" value="#FFFFFF" />
                        <j:set var="txt" value="${state.status}"/>
                        <j:if test="${state.getStatus().equals('OK')}">
                            <j:set var="color" value="#729FCF" />
                        </j:if>
                        <j:if test="${state.getStatus().equals('NOT OK')}">
                            <j:set var="color" value="#EF2929" />
                        </j:if>
                        <j:if test="${state.directive.equals('SKIP')}">
                            <j:set var="color" value="#FCE94F" />
                            <j:set var="txt" value="SKIP"/>
                        </j:if>
                        <j:if test="${state.directive.equals('TODO')}">
                            <!-- Maintain color for real status; but show TODO -->
                            <j:set var="txt" value="TODO" />
                        </j:if>
                        <td class="pane" style="text-align:right" bgcolor="${color}">
                            <span style="font-weight: bold">
                                <a href="../${build.number}">${txt}</a></span>
                        </td>
            
                    </j:forEach>
              </tr>
          </j:forEach>
        </table>
    </j:forEach>
</j:jelly>
